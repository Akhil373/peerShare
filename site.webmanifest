{
  "name": "PeerShare",
  "short_name": "PeerShare",
  "start_url": "/",
  "scope": "/",
  "icons": [
    {
      "src": "/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "theme_color": "#282828",
  "background_color": "#282828",
  "display": "standalone",
  "share_target": {
    "action": "/share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "shared_file",
          "accept": ["*/*"]
        }
      ]
    }
  },
  "screenshots": [
    {
      "src": "/screenshot-mobile.png",
      "sizes": "388x865",
      "type": "image/png"
    },
    {
      "src": "/screenshot-desktop.png",
      "sizes": "1916x980",
      "type": "image/png",
      "form_factor": "wide"
    }
  ]
}
